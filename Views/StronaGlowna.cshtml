              <li class="nav-item  animate__animated animate__fadeInDown">
                  <a class="nav-link" href="#contact">Kontakt</a>
                </li>
            </ul>
          </div>
        </nav>

          <!-- Main section -->
    <section class="showcase position-relative top-margin center-main">
      <div class="container-fluid p-0">
        <div class="row no-gutters position-relative section" id='section-1' >

          <div class="col-lg-4 position-relative"></div>
          <div class="col-lg-4 position-relative bg-black animate__animated animate__bounceInLeft animate__delay-1s">
            <h1 class="text-center" style="font-size: calc(2.5rem + 1vw);">@Model.Value("h1Title")</h1>
            <p class="text-center" style="font-size: calc(0.9rem + 1vw);">@Model.Value("textCenterPClass")</p>
          </div>
          <div class="col-lg-4 position-relative"></div>
        </div>
    
      </div>
